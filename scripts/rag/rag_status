#!/bin/bash
# scripts/rag/rag_status

# Determine the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Source the setup script to ensure environment variables and python venv are set
source "$SCRIPT_DIR/setup-rag.sh"

# Run the python status check script
# Pass all arguments to the python script (e.g. -v/--verbose)
python3 "$SCRIPT_DIR/check_status.py" "$@"
